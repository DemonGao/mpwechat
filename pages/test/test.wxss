/**index.wxss**/
@import '/utils/css/demonStyle.wxss';
@import '/utils/css/weui-loading.wxss';
page {
  background-color: #1a523f;
}

.demon_tab {
  background-color: #fefefe;
  width: 690rpx;
  margin: 0 auto;
  /*border: 1rpx solid #ccc;*/
  border-radius: 5rpx;
  /*box-shadow: 0 0 10rpx #ccc;*/
}

.demon_tab_content_item {
  padding: 0 30rpx;
}

/*用户排行样式*/

.demon_tab_content_item .rank {
  display: block;
  font-size: 40rpx;
  color: #cdced1;
  margin: auto 0;
}

.demon_tab_content_item:nth-child(1) .rank {
  color: #f5cf61;
}

.demon_tab_content_item:nth-child(2) .rank {
  color: #969696;
}

.demon_tab_content_item:nth-child(3) .rank {
  color: #f89e6e;
}

/*用户头像样式*/

.demon_tab_content_item .userImg {
  margin: auto 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}

/*其他样式*/

.demon_tab_content_item .others {
  display: flex;
  flex-flow: column nowrap;
  flex: 1;
}

.demon_tab_content_item .others .nickname {
  position: relative;
}

.demon_tab_content_item .others .nickname .nick {
  display: inline-block;
  font-size: 30rpx;
  margin-right: 12rpx;
}

.demon_tab_content_item .others .nickname .demon_label {
  display: inline-block;
  vertical-align: middle;
  font-size: 20rpx;
}

.demon_tab_content_item .others .number {
  display: flex;
  flex-flow: row nowrap;
  font-size: 28rpx;
  color: #666;
  justify-content: space-between;
  /*justify-content: space-around;*/
  text-align: center;
}

.demon_tab_content_item .others .number text {
  display: block;
  flex: 2;
  /*margin-bottom:24rpx;*/
}

.demon_tab_content_item .others .number text:last-child {
  margin: 0;
}
.dynamicgroup{
  position: relative;
}
.dynamicgroup .nomsgBox{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -200rpx;
  margin-top: -170rpx;
}
.dynamicgroup .nomsgimg{
  display: block;
  height: 240rpx;
  width: 400rpx;
  margin-bottom: 20rpx;
}
.dynamicgroup .nomsgtext{
  text-align: center;
  font: 30rpx 'PingFange SC';
  color: #DDDDDD;
}

.dynamicgroup .demon_tab_content_item .others {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  flex: 1;
}

.dynamicgroup .demon_tab_content_item .others .nickname {
  padding: 0;
}

.dynamicgroup .demon_tab_content_item .others .nickname .nick {
  font-size: 30rpx;
  color: #333;
  vertical-align: text-top;
}

.dynamicgroup .demon_tab_content_item .others .nickname .time {
  font-size: 24rpx;
  color: #969696;
  float: right;
  vertical-align: text-top;
}

.dynamicgroup .demon_tab_content_item {
  height: 160rpx;
  overflow: hidden;
}

.dynamicgroup .userImg {
  margin: 0 20rpx 0 0;
}

.dynamicgroup .share {
  box-sizing: border-box;
  background-color: #efeeed;
  margin-top: 20rpx;
  padding: 10rpx;
  height: 90rpx;
  position: relative;
}

.dynamicgroup .share .img {
  width: 70rpx;
  height: 70rpx;
  float: left;
}

.dynamicgroup .share .word {
  position: absolute;
  margin-left: 80rpx;
  vertical-align: top;
  color: #666;
  padding: 0 20rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 414rpx;
  overflow: hidden;
  position: fixed;
  top: 394rpx;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: 0 168rpx 0 168rpx;
  border-radius: 8rpx;
}

.drawer_title {
  padding: 40rpx 0 30rpx 0;
  font: 32rpx "PingFang SC";
  text-align: center;
}

.drawer_content {
  padding-bottom: 40rpx;
  height: 80rpx;
}
.drawer_content .grid{
  box-sizing: border-box;
  height: 100%;
  margin: 0 60rpx;
  border:1px solid #969696;
  background-color:#E6E6E6;
  overflow: hidden;
}
.drawer_content .logo{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}
.drawer_content .from-input{
  box-sizing: border-box;
  height: 100%;
  padding-left: 20rpx; 
  border-left:1px solid #969696; 
  background-color: #ffffff;
}
.drawer_content .input{
  height: 100%;
  width:210rpx;
  font: 26rpx "PingFang SC";
  font-weight: bold;
}
.drawer_footer{
  border-top: 1px solid #DDDDDD;
}
.drawer_footer .btn {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-right: 1px solid #DDDDDD;
  color: #969696;
}

.drawer_footer .btn.btn_ok {
  color: #09BB07;
  border-right: none;
}

.bottom {
  padding-bottom: 8px;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "PingFang SC";
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h30 {
  height: 30px;
  line-height: 30px;
}

.input_h60 {
  height: 60px;
}

.input_view {
  font: 12px "PingFang SC";
  background: #fff;
  color: #000;
  line-height: 30px;
}

input {
  font: 12px "PingFang SC";
  background: #fff;
  color: #000;
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
  box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}
